---
import { Image } from "astro:assets";
import MainLayout from "../layouts/main-layout.astro";
import Button from "../components/button.tsx";
import ArrowSec from "../icons/arrow-sec.tsx";
import CallIcon from "../icons/call.tsx";
import Experience from "../components/experience.tsx";
import heroImage from "../assets/still-life-cookies-ice-cream.jpg";

const services = [
	{
		title: "Produzione artigianale",
		text: "Gelateria artigianale di alta qualità, realizzata con ingredienti selezionati e metodi tradizionali italiani.",
	},
	{
		title: "Ricette personalizzate",
		text: "Sviluppiamo gusti unici e personalizzati per soddisfare le esigenze specifiche della tua attività.",
	},
	{
		title: "Consulenza professionale",
		text: "Supporto completo per bar, hotel e ristoranti nella scelta e gestione della gamma gelati.",
	},
];

const reviews = [
	{
		img: "/natasha.png",
		name: "Hotel Bellavista",
		location: "Milano, Italia",
		review: "La qualità del gelato Gelatelier è straordinaria. I nostri ospiti ne sono entusiasti e chiedono sempre il bis.",
	},
	{
		img: "/benny.png",
		name: "Ristorante Il Gusto",
		location: "Roma, Italia",
		review: "Collaboriamo con Gelatelier da anni. Professionalità, qualità e sapori autentici che fanno la differenza.",
	},
	{
		img: "/raymond.png",
		name: "Bar Centrale",
		location: "Firenze, Italia",
		review: "Il gelato artigianale di Gelatelier è diventato il nostro punto di forza. Clienti sempre soddisfatti!",
	},
];

const projects = [
	{
		img: "/project1.png",
		name: "Gelati classici",
		text: "Tradizione / Qualità",
	},
	{
		img: "/project2.png",
		name: "Gusti innovativi",
		text: "Creatività / Originalità",
	},
	{
		img: "/project3.png",
		name: "Sorbetti naturali",
		text: "Freschezza / Leggerezza",
	},
	{
		img: "/project4.png",
		name: "Semifreddi gourmet",
		text: "Eleganza / Raffinatezza",
	},
];

const clientLogos = [
	{
		img: "/clientLogo1.svg",
	},
	{
		img: "/clientLogo2.svg",
	},
	{
		img: "/clientLogo3.svg",
	},
	{
		img: "/clientLogo4.svg",
	},
	{
		img: "/clientLogo5.svg",
	},
];

const experiences = [
	{
		num: 15,
		text: "Anni di Esperienza",
	},
	{
		num: 200,
		text: "Clienti Soddisfatti",
	},
	{
		num: 50,
		text: "Partner Attivi",
	},
	{
		num: 100,
		text: "Gusti Sviluppati",
	},
];
---

<MainLayout title="Gelatelier - Laboratorio Artigianale di Gelato">
	<!-- Banner -->

	<section
		class="w-full h-screen lg:min-h-[110vh] flex items-center relative overflow-hidden"
	>
		<Image
			src={heroImage}
			alt="Gelatelier hero background"
			class="absolute inset-0 w-full h-full object-cover"
			loading="eager"
		/>
		<div
			class="absolute inset-0 bg-gradient-to-r from-white via-white/70 to-white/30 lg:to-transparent"
		>
		</div>
		<div
			class="lg:max-w-[1200px] w-full mx-auto flex flex-col px-12 xl:px-0 relative z-10 gap-3 pt-5"
		>
			<h1
				class="text-[40px] leading-[50px] md:text-[60px] xl:text-[85px] pb-4 font-dm md:leading-[106.25px] w-full xl:max-w-[60%] text-primary-200"
			>
				Gelatelier: il laboratorio del gusto Artigianale
			</h1>
			<p
				class="text-base md:text-[22px] pb-5 font-jost text-text-gray-200 w-full lg:max-w-[55%]"
			>
				Qualità artigianale e sapori autentici: creati con passione, per
				offrirti un piacere senza compromessi. Forniamo gelato
				artigianale d'eccellenza per bar, hotel e ristoranti in tutta
				Italia.
			</p>
			<Button href="/contact" text="Scopri di più" />
		</div>
	</section>

	<!-- Services Section -->

	<section
		class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between"
	>
		{
			services.map((service) => {
				return (
					<div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">
							{service.title}
						</h3>
						<p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center">
							{" "}
							{service.text}
						</p>
						<a
							href="/contact"
							class="text-text-gray-200 leading-snug text-lg tracking-tight font-jost font-semibold gap-2 py-4 md:py-8 startCenter hover:underline hover:cursor-pointer transition-all duration-300 hover:scale-102"
						>
							Scopri di più <ArrowSec />
						</a>
					</div>
				);
			})
		}
	</section>

	<!-- About Section -->

	<section
		class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 gap-[75px] pt-[100px] lg:pt-[200px]"
	>
		<div
			class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6"
		>
			<h2
				class="text-[30px] text-center lg:text-left font-dm tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
			>
				Creiamo l'Arte del gusto autentico con passione Italiana
			</h2>
			<p
				class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]"
			>
				Dal cuore dell'Italia, Gelatelier porta avanti la tradizione del
				gelato artigianale di qualità superiore. Ogni gusto è creato con
				ingredienti selezionati e un'attenzione maniacale ai dettagli,
				per garantire un'esperienza unica ai tuoi clienti.
			</p>
			<div class="flex gap-4 pt-3 items-center">
				<CallIcon />
				<p
					class="flex flex-col text-text-gray-200 font-jost tracking-tight"
				>
					<span class="text-2xl font-bold leading-9"
						>+39 123 456 7890</span
					>
					<span class="text-[22px] leading-8">Chiamaci per info</span>
				</p>
			</div>
			<Button href="/contact" text="Richiedi preventivo" />
		</div>

		<div>
			<img
				src="/bowl-decorated-chocolate-ice-cream.jpg"
				alt="Gelato artigianale Gelatelier"
				class="rounded-tr-4xl rounded-bl-4xl"
			/>
		</div>
	</section>

	<!-- What People Think About Us Section -->

	<section
		class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px]"
	>
		<div
			class="w-full flex flex-col bg-primary-300 rounded-[48px] px-6 py-[88px]"
		>
			<h2
				class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[60%] pb-9 mx-auto"
			>
				Cosa dicono i nostri clienti
			</h2>
			<div
				class="flex flex-col gap-8 lg:gap-10 lg:flex-row justify-between"
			>
				{
					reviews.map((rev) => {
						return (
							<div class="w-full bg-white max-w-[370px] px-[37px] py-[53px] rounded-3xl mx-auto flex flex-col justify-center gap-4 md:gap-6">
								<div class="flex flex-col sm:flex-row gap-6 items-center">
									<img src={rev.img} alt={rev.name} />
									<p class="flex flex-col tracking-tight leading-9">
										<span class="text-primary-200 text-lg lg:text-[25px] font-dm">
											{rev.name}
										</span>
										<span class="text-text-gray-200 text-base lg:text-lg font-jost">
											{rev.location}
										</span>
									</p>
								</div>
								<p class="font-jost tracking-tight leading-8 text-base text-center sm:text-left text-text-gray lg:text-[22px]">
									{rev.review}
								</p>
							</div>
						);
					})
				}
			</div>
		</div>
	</section>

	<!-- Client Logo Section -->

	<!-- <section
		class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px]"
	>
		<div
			class="w-full flex flex-row justify-between items-center gap-12 max-w-[1200px] overflow-x-scroll no-scrollbar"
		>
			{
				clientLogos.map((logo) => (
					<img src={logo.img} alt="Partner Gelatelier" />
				))
			}
		</div>
	</section> -->

	<!-- Projects Section -->

	<section
		class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px]"
	>
		<h2
			class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[60%] pb-2 mx-auto"
		>
			Le nostre creazioni
		</h2>
		<p
			class="text-base md:text-[22px] text-center tracking-tight font-jost text-text-gray leading-[33px] lg:max-w-[60%] mx-auto"
		>
			Dalla tradizione all'innovazione: scopri la varietà e la qualità
			delle nostre proposte artigianali, pensate per valorizzare la tua
			offerta.
		</p>
		<div
			class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-x-[104px] lg:gap-y-[56px] mt-12 lg:mt-[93px]"
		>
			{
				projects.map((proj) => {
					return (
						<div class="w-full flex flex-col gap-4">
							<img
								src={proj.img}
								alt={proj.name}
								class="rounded-3xl aspect-square object-cover"
							/>
							<p class="flex flex-col tracking-tight leading-9">
								<span class="text-primary-200 text-lg lg:text-[25px] font-dm">
									{proj.name}
								</span>
								<span class="text-text-gray-200 text-base lg:text-lg font-jost">
									{proj.text}
								</span>
							</p>
						</div>
					);
				})
			}
		</div>
	</section>

	<!-- Experience Section -->
	<section
		class="w-full bg-primary-300 px-12 xl:px-0 mx-auto mt-[100px] lg:mt-[200px] py-[151px]"
	>
		<div
			class="w-full max-w-[1200px] mx-auto flex lg:justify-center items-center overflow-x-scroll no-scrollbar"
		>
			{
				experiences.map((exp, i) => {
					return (
						<Experience
							text={exp.text}
							num={exp.num}
							i={i}
							client:load
						/>
					);
				})
			}
		</div>
	</section>
</MainLayout>

<style>
	/* Hide scrollbar for Chrome, Safari and Opera */
	.no-scrollbar::-webkit-scrollbar {
		display: none;
	}

	/* Hide scrollbar for IE, Edge and Firefox */
	.no-scrollbar {
		-ms-overflow-style: none; /* IE and Edge */
		scrollbar-width: none; /* Firefox */
	}
</style>
