---
import Navbar from "../components/navbar.tsx";
import Footer from "../components/footer.tsx";
import "../styles/globals.css";

export interface LayoutProps {
  title: string;
}

const { title } = Astro.props as LayoutProps;
---

<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Gelatelier: laboratorio artigianale di gelato italiano di alta qualità per bar, hotel e ristoranti. Qualità artigianale e sapori autentici creati con passione."
    />
    <meta
      name="keywords"
      content="gelato artigianale, laboratorio gelato, gelato per bar, gelato per hotel, gelato per ristoranti, gelato italiano, produzione gelato, gelateria artigianale"
    />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Il laboratorio del gusto artigianale - Qualità e sapori autentici per la tua attività"
    />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Jost:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <main class="bg-main bg-no-repeat bg-cover bg-center">
      <Navbar client:load />
      <div class="">
        <slot />
        <!-- All different pages to be rendered here -->
      </div>
      <Footer />
    </main>
    <p
      class="tracking-tight text-base text-center border border-gray-300 bg-white py-10 lg:text-[22px] lg:leading-[33px] font-jost text-text-gray"
    >
      Copyright © Gelatelier | Laboratorio Artigianale di Gelato
    </p>
  </body>
</html>
